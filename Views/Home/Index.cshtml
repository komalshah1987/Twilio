
@{
    ViewData["Title"] = "Send Mail";
}

@using (Html.BeginForm("SendMail", "Home", FormMethod.Post, new { id = "myForm" }))
{
<div class="row">

    <div class="col-md-4">
        <form id="myForm">

            <div class="form-group" id="dvSubmit">
                <h2>Send Mail</h2>
                <input type="submit" value="Send Mail" class="btn btn-danger" />
            </div>


            <div class="form-group">
                <div id="dvPleaseWait" style="display:none">
                    <h2><font color="#ef0225">Please wait...</font></h2>
                </div>
            </div>

        </form>
    </div>
</div>
}

